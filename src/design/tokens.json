{
  "brand": {
    "name": "Shopixo",
    "colors": {
      "primaryBackground": "#FFFFFF",
      "primaryText": "#111111",
      "secondaryBackground": "#F8F8F8",
      "accentGold": "#C9A227",
      "secondaryAccentNavy": "#1A3D7C",
      "error": "#D32F2F",
      "success": "#388E3C"
    }
  },
  "typography": {
    "fonts": {
      "heading": "Playfair Display",
      "body": "Inter"
    },
    "sizes": {
      "h1": { "desktop": 40, "mobile": 28, "weight": 700, "lineHeight": 1.2 },
      "h2": { "desktop": 32, "mobile": 24, "weight": 600, "lineHeight": 1.2 },
      "h3": { "desktop": 24, "mobile": 20, "weight": 600, "lineHeight": 1.2 },
      "body": { "desktop": 18, "mobile": 16, "weight": 400, "lineHeight": 1.5 },
      "small": { "desktop": 14, "mobile": 14, "weight": 400, "lineHeight": 1.4 }
    }
  },
  "spacing": {
    "base": 8,
    "section": { "desktop": 64, "mobile": 32 },
    "cardPadding": 24,
    "gutter": { "desktop": 24, "mobile": 16 }
  },
  "radii": {
    "card": 16,
    "button": 12,
    "input": 8,
    "image": 12
  },
  "buttons": {
    "primary": {
      "background": "#C9A227",
      "text": "#FFFFFF",
      "radius": 12,
      "padding": "14px 24px",
      "font": { "size": 16, "weight": 600 }
    },
    "secondary": {
      "border": "2px solid #1A3D7C",
      "text": "#1A3D7C",
      "radius": 12,
      "padding": "12px 22px",
      "hover": { "shadow": "0 4px 8px rgba(0,0,0,0.1)" }
    }
  },
  "breakpoints": {
    "mobileMax": 480,
    "tabletMax": 768,
    "smallDesktopMax": 1024,
    "largeDesktopMin": 1440
  }
}
