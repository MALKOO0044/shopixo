NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Server-only keys
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Cloudinary (for product image uploads)
# Preferred: Signed uploads using the server API /api/cloudinary/sign
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
# Create a preset in Cloudinary (unsigned disabled is recommended); use its name here
CLOUDINARY_UPLOAD_PRESET=SHOPIXO_SIGNED

# Public site URL (used in redirects, robots, sitemap)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: USDâ†’SAR exchange rate used by pricing usdToSar()
EXCHANGE_USD_TO_SAR=3.75

# Store branding (optional)
NEXT_PUBLIC_STORE_NAME=Shopixo
NEXT_PUBLIC_BRAND_LOGO_URL=

# Note: VERCEL_URL is set automatically by Vercel in Preview/Prod

# Optional: Restrict admin area to specific emails (comma-separated)
# If unset, any authenticated user can access /admin (useful for local dev)
ADMIN_EMAILS=admin@example.com,owner@example.com

# Optional fallback for unsigned uploads (not recommended for production)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=SHOPIXO_UNSIGNED

# Email provider (optional)
RESEND_API_KEY=

# Observability (optional)
SENTRY_DSN=

# CJdropshipping API (to integrate custom Next.js store)
CJ_APP_KEY=
CJ_APP_SECRET=
CJ_API_BASE=
CJ_API_BASE_SANDBOX=
CJ_WEBHOOK_SECRET=

# KSA DDP pricing configuration
# Target divisor for volumetric billing; can be overridden per service
KSA_DDP_DIVISOR=6000

# Optional: JSON string for weight tiers if not hardcoded (e.g., [{"maxKg":0.5,"priceSAR":25},{"maxKg":1,"priceSAR":35}])
KSA_DDP_MATRIX_JSON=

# AI providers (optional, used for enrichment/translation/search)
OPENAI_API_KEY=
AI_PROVIDER=openai
AI_MODEL_TEXT=gpt-4o-mini

# Chat API: server-side only; the UI can call /api/chat
