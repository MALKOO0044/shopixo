NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Server-only keys
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Public site URL (used in redirects, robots, sitemap)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Note: VERCEL_URL is set automatically by Vercel in Preview/Prod

# Optional: Restrict admin area to specific emails (comma-separated)
# If unset, any authenticated user can access /admin (useful for local dev)
ADMIN_EMAILS=admin@example.com,owner@example.com
